model ModulePerformance {
  id                  String    @id @default(cuid())
  userId              String
  moduleName          String
  totalGamesPlayed    Int
  completedGamesCount Int
  averageScorePerGame Float
  accuracy            Float
  avgResponseTimeSec  Float
  studyTimeMinutes    Int
  daysActiveCount     Int
  lastActiveDate      DateTime?
  lastGamePlayedAt    DateTime
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  user                User      @relation(fields: [userId], references: [id])

  @@unique([userId, moduleName])
}

model TopicPerformance {
  id                  String   @id @default(cuid())
  userId              String
  moduleName          String
  topicName           String
  averageScorePerGame Float
  accuracy            Float
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  completedGamesCount Int
  user                User     @relation(fields: [userId], references: [id])

  @@unique([userId, moduleName, topicName])
}

model Blog {
  id              String    @id @default(cuid())
  title           String
  module          String
  introduction    String
  metaDescription String
  imageUrl        String
  imageId         String
  createdAt       DateTime  @default(now())
  readTime        String?
  tableOfContents Json
  comments        Comment[]
}

model Comment {
  id      String   @id @default(cuid())
  blogId  String
  name    String
  content String
  date    DateTime @default(now())
  blog    Blog     @relation(fields: [blogId], references: [id])
}

model Subscription {
  id        String             @id @default(cuid())
  userId    String
  planType  String
  status    SubscriptionStatus @default(ACTIVE)
  startDate DateTime           @default(now())
  endDate   DateTime
  amount    Float
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  notes     String?
  payments  Payment[]
  user      User               @relation(fields: [userId], references: [id])

  @@unique([userId, planType])
}

model Payment {
  id                String        @id @default(cuid())
  userId            String
  subscriptionId    String?
  razorpayOrderId   String        @unique
  razorpayPaymentId String?       @unique
  amount            Float
  currency          String        @default("INR")
  status            PaymentStatus @default(PENDING)
  planType          String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  notes             String?
  subscription      Subscription? @relation(fields: [subscriptionId], references: [id])
  user              User          @relation(fields: [userId], references: [id])
}

model InstitutionalInquiry {
  id               String        @id
  contactName      String
  contactEmail     String
  contactPhone     String
  organizationName String
  organizationType String
  studentCount     Int
  message          String
  status           InquiryStatus @default(NEW)
  notes            String?
  followUpDate     DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime
}

model SalesNotification {
  id        String             @id
  type      String
  message   String
  data      String
  status    NotificationStatus @default(UNREAD)
  inquiryId String?
  paymentId String?
  createdAt DateTime           @default(now())
  readAt    DateTime?
  readBy    String[]
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum UserRole {
  USER
  ADMIN
  SALES
}

enum InquiryStatus {
  NEW
  CONTACTED
  FOLLOW_UP
  CONVERTED
  NOT_INTERESTED
}

model InstitutionalInquiry {
  id                String        @id @default(cuid())
  contactName       String
  contactEmail      String
  contactPhone      String
  organizationName  String
  organizationType  String
  studentCount      Int
  message           String
  status            InquiryStatus @default(NEW)
  notes             String?
  followUpDate      DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model SalesNotification {
  id              String            @id @default(cuid())
  type            String            // Notification type (e.g., NEW_INQUIRY, INQUIRY_UPDATED, etc.)
  message         String
  data            String            // JSON stringified data related to the notification
  status          NotificationStatus @default(UNREAD)
  inquiryId       String?           // Related inquiry ID if applicable
  paymentId       String?           // Related payment ID if applicable
  createdAt       DateTime          @default(now())
  readAt          DateTime?         // When the notification was read
  readBy          String[]          // IDs of users who have read this notification
}

enum NotificationStatus {
  UNREAD
  READ
  ARCHIVED
}
